doctype html
html
  head
    title Login
    link(rel='stylesheet', href='/stylesheets/estiloLogin.css')
  body
    div.container
      
      form(action='/formularioPersona', method='post')
        label(for='username') Nombre:
        input(type='text', id='username', name='username', placeholder='Ingrese Nombre', required)
        br
        br
        label(for='apellido') Apellido:
        input(type='text', id='apellido', name='apellido', placeholder='Ingrese Apellido', required)
        br
        br
        label(for='dni') Dni:
        input(type='text', id='dni', name='dni', placeholder='Ingrese DNI', required)
        br
        br
        label(for='mail') Mail:
        input(type='email', id='mail', name='mail', placeholder='Ingrese mail', required)
        br
        br
        label(for='sexo') Sexo:
        
        select(name="sexo")
            option(value="masculino") masculino 
            option(value="femenino") femenino
        br
        br
        label(for='fechaNacimiento') Fecha de Nacimiento:
        input(type='date', id='fechaNacimiento', name='fechaNacimiento',placeholder='Ingresefecha     de Nacimiento', required)
        br
        br
        label(for='domicilio') Domicilio:
        input(type='text', id='domicilio', name='domicilio', placeholder='Ingrese Domicilio', required)
        br
        br
        label(for='provincia') Provincia:
        input(type='provincia', id='provincia', name='provincia', placeholder='Ingrese provincia', required)
        br
        br
        label(for='localidad') Localidad:
        input(type='localidad', id='localidad', name='localidad', placeholder='Ingrese Localidad', required)
        br
        br
        label(for='obraSocial') Obra social:
        input(type='obraSocial', id='obraSocial', name='obraSocial', placeholder='Ingrese Obra Social', required)
        br
        br
        label(for='numeroAfiliado') Numero de Afiliado:
        input(type='numeroAfiliado', id='numeroAfiliado', name='numeroAfiliado', placeholder='Ingrese Numero de Afiliado', required)
        br
        br
        label(for='user') Nombre de usuario:
        input(type='text', id='user', name='user', placeholder='Ingrese  Usuario', required)
        br
        br
        label(for='password') Contraseña:
        input(type='password', id='password', name='password', placeholder='Ingrese Contraseña', required)
        br
        br
        button(type='submit') Guardar
        br
        br

