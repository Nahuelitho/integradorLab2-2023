extends ../layout/plantilla 

block contenido 
    link(rel='stylesheet', type='text/css', href='../css/personaFormulario.css')
    div.container
        h3 Cargar un Examen 
        form(action="", method="post", id="cargaExamenForm")
            .row
                .col
                    h5 Nombre de examen: 
                    input(type='text', id='nombre', name='nombre', placeholder='Ingrese Nombre examen', required)
                .col
            .row
                h5 Valores Referencia Hombre : 
            .row 
                .col
                    label(for='desde') Desde :
                    input(type='text', id='valRefHomD', name='valRefHombreD')
                .col
                    label(for='hasta') Hasta :
                    input(type='text', id='valRefHomH', name='valRefHombreH')   
            .row
                h5 Valores Referencia Mujer : 
                .row
                    .col
                        label(for='desde') Desde :
                        input(type='text', id='valRefMujD', name='valRefMujerD')
                    .col 
                        label(for='hasta') Hasta :
                        input(type='text', id='valRefMujH', name='valRefMujerH')
            .row 
                h5 Valores Referencia Ni√±o : 
                .row 
                    .col 
                        label(for='desde') Desde :
                        input(type='text', id='valRefNinioD', name='valRefNinioD')
                    .col 
                        label(for='hasta') Hasta :
                        input(type='text', id='valRefNinioH', name='valRefNinioH')
            .row 
                .col 
                    button(type='submit', id="btGuardarExamen" class="btn btn-primary") Guardar Examen
                .col
                    input(type="button" onclick="history.back()" name="volver" value="volver")

    div(name="tabla")


    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src="https://kit.fontawesome.com/7aad8207b8.js"  crossorigin="anonymous")
    script(scr="../js/ExamenDetalle.js")

