extends ../layout/plantilla 

block contenido 
    body()
        div.container
            
            form(method="post", id="formulario", action="")
                label(for='nombre') Nombre:
                input(type='text', id='nombre', name='nombre', ,value=persona.nombre)
                
                br
                label(for='apellido') Apellido:
                input(type='text', id='apellido', name='apellido', value=persona.apellido)
                
                br
                label(for="dni") DNI:
                input(type='text', id='dni', name='dni', value=persona.dni)
                
                br
                label(for='email') Mail:
                input(type='email', id='email', name='email',  value=persona.email)
                
                br
                input(type='text', form="formulario",  id='sexo', name='sexo', value=persona.sexo)
                label(for='selectorSexo', style="display: block") Sexo:
                select(form = "formulario", name="sexo", id="selectorSexo", required)
                    option(value="Masculino", id="Masculino") Masculino
                    option(value="Femenino", id="Femenino")  Femenino
                
                br
                label(for='fechaNac') Fecha de Nacimiento:
                input(type='text', form="formulario",  id='sexo', name='fechaNac', value=persona.fechaNacimiento)
                input(type='date', form="formulario",  id='fechaNacimiento', name='fechaNacimiento', required)
                
                br
                label(for='domicilio') Domicilio:
                input(type='text', id='domicilio', name='domicilio', value=persona.domicilio)
                
                br
                div
                div(class="row")
                        div(class="col")
                            label(for="prov", style="display: block") Provincia:
                            input(type='text', form="formulario",  id='prov', name='prov', value=persona.provincia)
                            select(form = "formulario", name="provincia" id="selectorProvincia", required)
                                option(value="San Luis") San Luis
                                option(value="Mendoza") Mendoza
                                option(value="Cordoba") Cordoba   
                            br
                        div(class="col")
                            label(for="loc", style="display: block") Localidad:
                            input(type='text', form="formulario",  id='loc', name='loco', value=persona.localidad)
                            select(form = "formulario", name = "localidad", id="selectorLocalidad", required)
                                option(value="San Luis") San Luis
                                option(value="La Toma") La Toma  
                            br
                label(for='obraSocial') Obra social:
                input(type='obraSocial', id='obraSocial', name='obraSocial',value=persona.obraSocial)
                
                br
                label(for='numeroAfiliado') Numero de Afiliado:
                input(type='numeroAfiliado', id='numeroAfiliado', name='numeroAfiliado',value=persona.numeroAfiliado)
                
                br
                label(for='user') Nombre de usuario:
                input(type='text', id='user', name='user',  value=persona.user)
                
                button(type='submit', id="btGuardar") Guardar
                br
                br
       