extends ../layout/plantilla 

block contenido 
    link(rel='stylesheet', type='text/css', href='css/personaFormulario.css') 
    div.container
        
        form(method="post", id="formulario")
            
            label(for='nombre') Nombre:
            input(type='text', id='nombre', name='nombre', required)
            
            br
            label(for='apellido') Apellido:
            input(type='text', id='apellido', name='apellido', required)
            
            br
            label(for="dni") DNI:
            input(type='text', id='dni', name='dni', required)

            br
            label(for="telefono") Telefono:
            input(type='text', id='telefono', name='telefono', required)
            
            br
            label(for='email') Mail:
            input(type='email', id='email', name='email', required)
            
            br
            label(for='selectorSexo', style="display: block") Sexo:
            select(form = "formulario", name="sexo", id="selectorSexo", required)
                option(value="Masculino") Masculino
                option(value="Femenino")  Femenino
            br
            label( style="display: block") Embarazada:
                br
                label(for="embarazada") Si
                    input(type="checkbox", id="embarazada", value=1) 
             
            label(for='fechaNacimiento') Fecha de Nacimiento:
            input(type='date', form="formulario",  id='fechaNacimiento', name='fechaNacimiento', required)
            
            br
            label(for='domicilio') Domicilio:
            input(type='text', id='domicilio', name='domicilio', required)
            br
            div
               div(class="row")
                    div(class="col")
                        label(for="selectorProvincia", style="display: block") Provincia:
                        select(form = "formulario", name="provincia" id="selectorProvincia", required)
                            option(value="Buenos Aires") Buenos Aires
                            option(value="Catamarca") Catamarca   
                            option(value="Chaco") Chaco   
                            option(value="Chubut") Chubut   
                            option(value="Cordoba") Cordoba   
                            option(value="Corrientes") Corrientes   
                            option(value="Entre Rios") Entre Rios
                            option(value="San Luis") San Luis
                            option(value="Mendoza") Mendoza   
                        br
                    div(class="col")
                        label(for="selectorLocalidad", style="display: block") Localidad:
                        select(form = "formulario", name = "localidad", id="selectorLocalidad", required)
                            option(value="Ayacucho") Ayacucho
                            option(value="Belgrano") Belgrano 
                            option(value="Chacabuco") Chacabuco  
                            option(value="Pringles") Pringles  
                            option(value="Pedernera") Pedernera
                            option(value="Dupuy") Dupuy  
                            option(value="Pueyrredon") Pueyrredon  
                            option(value="Junin") Junin  
                            option(value="San Martin") San Martin  
                            option(value="Capital") Capital  
                        br
            label(for='obraSocial') Obra social:
            input(type='obraSocial', id='obraSocial', name='obraSocial', required)
            
            br
            label(for='numeroAfiliado') Numero de Afiliado:
            input(type='numeroAfiliado', id='numeroAfiliado', name='numeroAfiliado', required)
            
            br
            label(for='user') Nombre de usuario:
            input(type='text', id='user', name='user', required)
            
            br
            label(for='password') Contrase√±a:
            input(type='password', id='password', name='password', required)
            
            br
            button(type='submit', id="btGuardar") Guardar
            br
            br
    script(src="../js/script.js")
        
    