extends ../../layout/plantilla

block contenido 
    body()
        div.container
            
            form(method="post", id="formulario", action="")
                h1 Actualizar Examen:

                .row
                    .col
                        h5 Nombre de examen: 
                        input(type='text', id='nombre', name='nombre', value=examen.nombre)
                .row
                    h5 Valores Referencia Hombre : 
                .row 
                    .col
                        label(for='desde') Desde :
                        input(type='text', id='valRefHombreD', name='valRefHombreD', value=examen.valRefHombreD)
                    .col
                        label(for='hasta') Hasta :
                        input(type='text', id='valRefHombreH', name='valRefHombreH', value=examen.valRefHombreH)   
                .row
                    h5 Valores Referencia Mujer : 
                    .row
                        .col
                            label(for='desde') Desde :
                            input(type='text', id='valRefMujerD', name='valRefMujerD', value=examen.valRefMujerD)
                        .col 
                            label(for='hasta') Hasta :
                            input(type='text', id='valRefMujerH', name='valRefMujerH', value=examen.valRefMujerH)
                .row 
                    h5 Valores Referencia Ni√±o : 
                    .row 
                        .col 
                            label(for='desde') Desde :
                            input(type='text', id='valRefNinioD', name='valRefNinioD', value=examen.valRefNinioD)
                        .col 
                            label(for='hasta') Hasta :
                            input(type='text', id='valRefNinioH', name='valRefNinioH', value=examen.valRefNinioH)
                .row 
                    .col 
                        button(type='submit', id="btGuardarExamen" class="btn btn-primary") Guardar Examen
